<div class="wrapper">
  <div class="page-top-btns">
    <%= link_to("/tags", class: "page-back") do %>
      <i class="fas fa-angle-left"></i>
      <p>戻る</p>
    <% end %>
  </div>
  <h1>カテゴリ一覧</h1>
  <table>
    <tr>
      <th class="width10">id</th>
      <th>name</th>
      <th>size</th>
      <th class="width20"><!-- ボタン設置 --></th>
    </tr>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= category.tags.size %></td>
        <td class="table-btns">
          <%= link_to("/tags/categories/#{category.id}/edit") do %>
            <i class="fas fa-pen"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <div class="btns">
    <%= button_to "カテゴリ追加", "/tags/categories/create", {method: :get, class: "btn"} %>
  </div>
</div>