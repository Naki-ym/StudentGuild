<div class="wrapper">
  <div class="page-top-btns">
    <%= link_to("/admin", class: "page-back") do %>
      <i class="fas fa-angle-left"></i>
      <p>戻る</p>
    <% end %>
  </div>
  <h1>タグ一覧</h1>
  <table>
    <tr>
      <th class="width10">id</th>
      <th>name</th>
      <th>category</th>
      <th class="width20"><!-- ボタン設置 --></th>
    </tr>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.id %></td>
        <td><%= tag.name %></td>
        <td><%= tag.category.name %></td>
        <td class="table-btns">
          <%= link_to("/tags/#{tag.id}/edit") do %>
            <i class="fas fa-pen"></i>
          <% end %>
          <%= link_to("#") do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <div class="btns">
    <%= button_to "タグ追加", "/tags/create", {method: :get, class: "btn"} %>
    <%= button_to "カテゴリ", "/tags/categories", {method: :get, class: "btn"}%>
  </div>
</div>