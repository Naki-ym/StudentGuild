<div class="not-scroll">
  <div class="projects-wrapper">
    <section class="menu">
      <ul class="menu-list">
        <li><%= link_to("MyProject", "/myprojects", {class: "list-btn"}) %></li>
        <li>aaaa</li>
        <li>aaaa</li>
      </ul>
    </section>
    <section class="projects-right">
      <h1>最近の募集</h1>
      <div class="projects-bord">
        <% @projects.each do |project| %>
          <div class="project-box">
            <%= link_to("/projects/#{project.id}") do %>
              <% if project.image? %>
                <%= image_tag project.image.url, class:"project-img" %>
              <% else %>
                <img src="/assets/image.png" alt="image" class="project-img">
              <% end %>
              <div class="project-content">
                <h2><%= project.name %></h2>
                <p><%= project.overview %></p>
                <p><%= project.target %></p>
              </div>
            <% end %>
          </div>
        <% end %>
        <% 10.times do %>
          <div class="project-box">
            <img src="/assets/image.png" alt="image" class="project-img">
            <div class="project-content">
              <h2>project title</h2>
              <p>content</p>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>