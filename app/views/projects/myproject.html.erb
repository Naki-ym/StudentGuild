<div class="not-scroll">
  <div class="projects-wrapper">
    <section class="projects-left">
      <div class="fixed">
        <div class="menu">
          <ul class="menu-list">
            <li><%= link_to("< 戻る", "/projects") %></li>
            <li><%= link_to("新規プロジェクト", "/projects/create", {class: "list-btn"}) %></li>
            <li><%= link_to("すべて", "/myprojects") %></li>
            <li><%= link_to("公開済み", "/myprojects?is_published=true") %></li>
            <li><%= link_to("未公開", "/myprojects?is_published=false") %></li> 
          </ul>
        </div>
      </div>
    </section>
    <section class="projects-right">
      <h1>マイプロジェクト</h1>
      <div class="projects-bord">
        <% @projects.each do |project| %>
          <div class="project-box">
            <%= link_to("/projects/#{project.id}") do %>
              <% if project.image? %>
                <%= image_tag project.image.url, class:"project-img" %>
              <% else %>
                <img src="/assets/image.png" alt="image" class="project-img">
              <% end %>
              <div class="project-content">
                <h2><%= project.name %></h2>
                <p><%= project.overview %></p>
                <p><%= project.target %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </section>
  </div>

</div>