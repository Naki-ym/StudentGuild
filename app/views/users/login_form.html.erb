<div class="form-wrapper">
  <h1>ログイン</h1>
  <%= form_tag("/login") do %>
    <section class="form">
      <div class="form-item">
        <h2>メールアドレス</h2>
        <input name="email" value="<%= @email%>" class="textbox">
      </div>
      <div class="form-item">
        <h2>パスワード</h2>
        <input name="password" type="password" class="textbox">
      </div>
    </section>
    <div class="btns">
      <input type="submit" value="ログイン" class="btn">
    </div>
  <% end %>
</div>